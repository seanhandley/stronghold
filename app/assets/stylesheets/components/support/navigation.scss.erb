@import "settings";

nav {
  text-align: right;
}

nav span.choice {
  border-right: solid 1px grey;
  padding-right: 5px;
}

nav span.choice.logout {
  border-right: 0px
}

nav span.choice a:hover {
  text-decoration: none;
  opacity:0.4;
}

div.top-nav {
  background: $brand-primary;
  border-bottom: 1px solid #444;
  margin-bottom: 10px;
  min-height: 47px;
}

.admin-menu {
  background: $brand-danger !important;
}

div.he-man {
  background-image: url(<%= asset_path 'heman.png' %>);
  background-size: 415px 232px;
  background-repeat: no-repeat;
  background-position: right bottom;
  background-size: contain;
}

div.osbg {
  background-image: url(<%= asset_path 'os_cloud.png' %>);
  background-repeat: no-repeat;
  background-position: right bottom;
}

h3.organisation {
  padding-bottom: 10px;
  border-bottom: solid 1px #ccc;
}

h3.organisation img {
  margin-right: 5px;
}

div.context-nav {
  float: right;
  vertical-align: middle;
}

div.context-nav button {
  margin-top: 3px;
  padding: 5px 10px 5px 10px;
}

div.context-nav .btn .caret {
  color: $menu-link-colour;
}

div.context-nav i {
  min-width: 16px;
  margin-right: 6px;
  text-align: right;
  opacity: 0.8;
}

ul.dropdown-menu {
  opacity: 1.0 !important;
}

body {
  margin: 0;
}

#loading-overlay {
  position: fixed;
  width: 100%;
  height:100%;
  display: table;
  align-items: center;
  background: rgba(0, 0, 0, 0.4);
  top: 0;
  z-index: 2000;
}

#loading-overlay .spinner {
  display: table-cell;
  vertical-align: middle;
  text-align: center;
  margin: 0 auto;
  color: white;
  font-size: 80px;
}

@media only screen and (max-width: 480px), only screen and (max-device-width: 480px) {
  .pull-right#dashboard_buttons {
    float: none !important;
  }
}